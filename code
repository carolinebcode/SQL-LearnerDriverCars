CREATE TABLE CarFinance
(CarMake VARCHAR (13) NOT NULL,
InsurancePremium DECIMAL (5,2) NOT NULL,
 Price INTEGER NOT NULL,
FOREIGN KEY (CarMake) REFERENCES CarDesign (CarMake)
);

