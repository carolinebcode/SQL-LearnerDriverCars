CREATE TABLE CarEfficiency
(CarMake VARCHAR (13) NOT NULL,
MilesPerGallon DECIMAL (3,1) NOT NULL,
CO2Emissions INTEGER NOT NULL,
FOREIGN KEY (CarMake) REFERENCES CarDesign (CarMake)
);

